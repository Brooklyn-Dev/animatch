<% content_for :title, "Editing match session" %>

<% if notice.present? %>
  <p style="color: green"><%= notice %></p>
<% end %>

<h1>Editing match session</h1>

<p>
  <strong>Public Link:</strong>
  <% public_url = public_match_session_url(@match_session.public_token) %>
  <%= link_to public_url.sub(%r{^https?://}, ''), public_url, target: "_blank", rel: "noopener" %>
</p>

<p>
  <strong>Edit Link (keep this safe):</strong>
  <% edit_url = edit_match_session_url(@match_session.edit_token) %>
  <%= link_to edit_url.sub(%r{^https?://}, ''), edit_url, target: "_blank", rel: "noopener" %>
</p>

<%= render "form", match_session: @match_session %>